<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "yoshi portfolio alert", :sticky => false, time: 3000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "yoshi portfolio error", :sticky => false, time: 3000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "yoshi portfolio notice", :sticky => false, time: 3000 ) %>
<% end %>
