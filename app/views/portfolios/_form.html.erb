<%= form_with(model: portfolio_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :subtitle, class: "form-label" %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :main_image, class: "form-label" %>
        <%= f.file_field :main_image, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :thumb_image, class: "form-label" %>
        <%= f.file_field :thumb_image, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :body, class: "form-label" %>
        <%= f.text_area :body, class: "form-control", rows: 13 %>
      </div>
    </div>
    <div class="col-md-12">
      <h2>Technology Used</h2>
      <div>
        <%= f.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>
        <div>
          <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary w-100" %>
  </div>
<% end %>
